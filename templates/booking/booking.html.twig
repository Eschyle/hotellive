{% block body %}
    {{ form(form) }}
    <div class="my-3">
        <p><span id="nbNight">...</span> nuit(s) à <span id="roomPrice">...</span>&euro; pour un total de <span id="totalPrice">...</span>&euro;</p>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        let calculate = function () {
            const milliInDay = 24 * 60 * 60 * 1000;
            const startDate = new Date($('#{{ form.startDate.vars.id }}'));
            const endDate = new Date($('#{{ form.endDate.vars.id }}'));
            const price = new Date($('#{{ form.room.vars.id }} option:selected').attr('data-price'));
            if (price && startDate && endDate && startDate < endDate){
                const interval = endDate.getTime() - startDate.getTime();
                const nbNights = interval / milliInDay;
                const totalPrice = nbNights * price;
                console.log(nbNights);
                $('#nbNight').text(nbNights);
                $('#roomPrice').text(price);
                $('#totalPrice').text(totalPrice.toLocaleString('fr-FR'));
            }
        }

        $('#{{ form.room.vars.id }}').on('change', calculate);
        $('#{{ form.startDate.vars.id }}').on('change', calculate);
        $('#{{ form.endDate.vars.id }}').on('change', calculate);
    </script>
{% endblock %}
